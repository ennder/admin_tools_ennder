<table border="2">
<thead>
	<th colspan="2">Chemin des Gems</th>
</thead>
<%
	Gem.path.each_with_index { |_chemin, i|
%>
<tr><td><%= i %></td><td><%= _chemin %></td></tr>
<% } %>
</table>
